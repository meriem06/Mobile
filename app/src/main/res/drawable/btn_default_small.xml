<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#CCCCCC" /> <!-- Pressed background color -->
            <corners android:radius="8dp" />
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- Default background color -->
            <stroke android:width="2dp" android:color="#4CAF50" /> <!-- Optional border -->
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>
