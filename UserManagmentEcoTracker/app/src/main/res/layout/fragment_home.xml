<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/button_gps_fragment"
        android:layout_width="143dp"
        android:layout_height="108dp"
        android:layout_marginTop="12dp"
        android:background="@color/material_dynamic_neutral_variant100"
        android:src="@drawable/logo_gps_home_page"
        android:text="Open GPS Fragment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/button_sound"
        android:layout_width="143dp"
        android:layout_height="108dp"
        android:layout_marginTop="12dp"
        android:background="@color/material_dynamic_neutral_variant100"
        android:src="@drawable/sound_bg"
        android:text="Open GPS Fragment"
        app:layout_constraintStart_toEndOf="@+id/button_gps_fragment"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/button_lum"
        android:layout_width="143dp"
        android:layout_height="108dp"
        android:layout_marginTop="44dp"
        android:background="@color/material_dynamic_neutral_variant100"
        android:src="@drawable/light_bg"
        android:text="Open GPS Fragment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_gps_fragment" />

</androidx.constraintlayout.widget.ConstraintLayout>
